<p id="notice"><%= notice %></p>
<div id="server-content">
	<p>
	  <b>Name:</b>
	  <%= @server.name %><br>
	  submitted by: <%= @server.user.username %>  
	</p>
	
	<p>
	  <b>Url:</b>
	  <%= @server.url %>
	</p>
	
	<p>
	  <b>Description:</b>
	  <%= @server.description %>
	</p>
</div>
<hr>
<div id="comments"> 
	
	

	<% if user_signed_in? %>
		<div id="make-comment">
			<%= form_for([@server, @server.comments.build]) do |f| %>
			  <div class="lol">
			    <%= f.text_area :body %><br>
			    <%= f.submit %>
			  </div>
			<% end %>
		</div>
	<% end %>

  <% if !@server.comments.empty? %>
    <%= render :partial => 'comments/comment', :collection => @server.comments %>
  <% end %>
  </div>

<%= link_to 'Edit', edit_server_path(@server) %> |
<%= link_to 'Back', servers_path %>
